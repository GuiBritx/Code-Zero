    <record id="action_lang_who_c" model="ir.actions.act_window">
        <field name="name">Linguagem C</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">code.zero</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[('Linguagem', '=', 'c')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your C field
            </p>
        </field>
    </record>

    <menuitem id="menu_langs_c" 
              name="Linguagem C"
              parent="code_zero_root"
              action="action_lang_who_c"
              sequence="30"/>




